#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

cd "$REPO_ROOT"

echo "Building pinocchio_sol_vault_program..."
cargo build-sbf --manifest-path programs/pinocchio_sol_vault_program/Cargo.toml

echo "Building pinocchio_sol_vault_client..."
cargo build --manifest-path clients/rust/pinocchio_sol_vault_client/Cargo.toml

echo "Build complete!"

